{
  "name": "gvacation",
  "version": "1.0.0",
  "description": "a gmail inspired app for accept and decline vacations",
  "main": "index.js",
  "scripts": {    
    "public": "mkdir -p public/fonts/roboto",
    "assets": "node-sass -o public/ client/app.scss && cp -r node_modules/materialize-css/fonts/roboto/. public/fonts/roboto",
    "build-js": "NODE_PATH=. browserify -t [ babelify --presets [es2015] ] client/index.js > public/bundle.js",
    "watch-js": "NODE_PATH=. watchify -t [ babelify --presets [es2015] ] client/index.js -o public/bundle.js -v",
    "build": "npm run public && npm run assets && npm run build-js ",
    "serve": "NODE_PATH=. babel-node bin/www.js --presets es2015",
    "test": "npm run public && npm run assets && npm run watch-js & npm run serve",
    "start": "npm run build && npm run serve"
  },
  "keywords": [
    "vacations",
    "inbox"
  ],
  "author": "Alejandro Moreno",
  "license": "ISC",
  "dependencies": {
    "babel-cli": "^6.14.0",
    "babel-preset-es2015": "^6.14.0",
    "express": "^4.14.0",
    "jade": "^1.11.0",
    "jquery": "^3.1.0"
  },
  "devDependencies": {
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "list.js": "^1.2.0",
    "materialize-css": "^0.97.7",
    "node-sass": "^3.8.0",
    "page": "^1.7.1",
    "watchify": "^3.7.0",
    "yo-yo": "^1.2.2"
  }
}